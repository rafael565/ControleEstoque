@model ControleEstoque.Models.MonitorEquipamento

@{
    ViewData["Title"] = "Deletar Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar item</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>
<div>
    <h4>MonitorEquipamento</h4>
