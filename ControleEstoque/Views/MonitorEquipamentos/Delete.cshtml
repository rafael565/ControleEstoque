        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.modelo)
        </dd>

        <!-- Série -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.serie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.serie)
        </dd>

        <!-- Patrimônio -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.patrimonio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.patrimonio)
        </dd>

        <!-- Quantidade -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.quantidade)
        </dt>
