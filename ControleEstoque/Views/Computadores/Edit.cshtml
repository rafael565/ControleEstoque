@model ControleEstoque.Models.Computador

@{
    ViewData["Title"] = "Editar Computador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Computador</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="id" />

                        <div class="form-group mb-3">
                            <label asp-for="modelo" class="form-label">Modelo</label>
                            <input asp-for="modelo" class="form-control" />
                            <span asp-validation-for="modelo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="serie" class="form-label">Série</label>
                            <input asp-for="serie" class="form-control" />
                            <span asp-validation-for="serie" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="patrimonio" class="form-label">Patrimônio</label>
                            <input asp-for="patrimonio" class="form-control" />
                            <span asp-validation-for="patrimonio" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="quantidade" class="form-label">Quantidade</label>
                            <input asp-for="quantidade" class="form-control" />
                            <span asp-validation-for="quantidade" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="nome" class="form-label">Nome</label>
                            <input asp-for="nome" class="form-control" />
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="setor" class="form-label">Setor</label>
                            <select asp-for="setor" class="form-control" asp-items="Html.GetEnumSelectList<ControleEstoque.Enum.Setor>()"></select>
                            <span asp-validation-for="setor" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="status" class="form-label">Status</label>
                            <select asp-for="status" class="form-control" asp-items="Html.GetEnumSelectList<ControleEstoque.Enum.Status>()"></select>
                            <span asp-validation-for="status" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
