@model ControleEstoque.Models.Dispositivo

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detalhes do Dispositivo</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Modelo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.modelo)</dd>

                <dt class="col-sm-4">Série</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.serie)</dd>

                <dt class="col-sm-4">Patrimônio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.patrimonio)</dd>

                <dt class="col-sm-4">Quantidade</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.quantidade)</dd>

                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.nome)</dd>

                <dt class="col-sm-4">Setor</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.setor)</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.status)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>
    </div>
</div>
