@model ControleEstoque.Models.Dispositivo

@{
    ViewData["Title"] = "Cadastrar Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Cadastrar Novo Dispositivo</h1>
    <h4>Informações do Dispositivo</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Dados do Dispositivo</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Modelo -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="modelo" class="form-label">Modelo</label>
                                <input asp-for="modelo" class="form-control" placeholder="Digite o modelo do dispositivo" />
                                <span asp-validation-for="modelo" class="text-danger"></span>
                            </div>

                            <!-- Série -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="serie" class="form-label">Série</label>
                                <input asp-for="serie" class="form-control" placeholder="Digite o número da série" />
                                <span asp-validation-for="serie" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Patrimônio -->
                        <div class="mb-3">
                            <label asp-for="patrimonio" class="form-label">Patrimônio</label>
                            <input asp-for="patrimonio" class="form-control" placeholder="Digite o número de patrimônio" />
                            <span asp-validation-for="patrimonio" class="text-danger"></span>
                        </div>

                        <!-- Quantidade -->
                        <div class="mb-3">
                            <label asp-for="quantidade" class="form-label">Quantidade</label>
                            <input asp-for="quantidade" class="form-control" type="number" placeholder="Digite a quantidade" />
                            <span asp-validation-for="quantidade" class="text-danger"></span>
                        </div>

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="nome" class="form-label">Nome</label>
                            <input asp-for="nome" class="form-control" placeholder="Digite o nome do dispositivo" />
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>

                        <!-- Setor -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="setor" class="form-label">Setor</label>
                                <select asp-for="setor" class="form-select" asp-items="Html.GetEnumSelectList<ControleEstoque.Enum.Setor>()">
                                    <option value="">Selecione o Setor</option>
                                </select>
                                <span asp-validation-for="setor" class="text-danger"></span>
                            </div>

                            <!-- Status -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="status" class="form-label">Status</label>
                                <select asp-for="status" class="form-select" asp-items="Html.GetEnumSelectList<ControleEstoque.Enum.Status>()">
                                    <option value="">Selecione o Status</option>
                                </select>
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Botão de envio -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                            <button type="submit" class="btn btn-success">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
