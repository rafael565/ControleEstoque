@model ControleEstoque.Models.Chip

@{
    ViewData["Title"] = "Excluir Chip";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmação de Exclusão</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center mb-4">Tem certeza de que deseja excluir este chip?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">IMEI</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.imei)</dd>

                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.nome)</dd>

                        <dt class="col-sm-4">Setor</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.setor)</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.status)</dd>
                    </dl>
                    <form asp-action="Delete" class="d-flex justify-content-between mt-4">
                        <input type="hidden" asp-for="id" />
                        <button type="submit" class="btn btn-danger">Excluir</button>
                        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
