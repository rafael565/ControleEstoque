@model ControleEstoque.Models.Chip

@{
    ViewData["Title"] = "Detalhes do Chip";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Detalhes do Chip</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">IMEI</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.imei)</dd>

                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.nome)</dd>

                        <dt class="col-sm-4">Setor</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.setor)</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.status)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
